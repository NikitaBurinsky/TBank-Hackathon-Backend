{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres; Port=5432; Database=dbase; Username=postgres; Password=redbull;Include Error Detail=true;"
  },
  "FileStorage": {
    /* Bytes */
    "MaxFileSizes": {
      "Image": 15000000,
      "Video": 200000000,
      "Document": 100000000
    },
    "RootSubFolder": "/wwwroot",
    "AcceptableMediaExtensions": {
      ".jpg": "Image",
      ".jpeg": "Image",
      ".png": "Image",
      ".gif": "Image",
      ".mp4": "Video",
      ".mov": "Video",
      ".h264": "Video",
      ".pdf": "Document"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": { "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}" }
      },
      {
        "Name": "File",
        "Args": {
          "path": "\\Logs\\log-.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  }
}
